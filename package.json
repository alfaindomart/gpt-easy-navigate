{
  "name": "IToS - I'm tired of scrolling (ChatGPT, Gemini, and more)",
  "description": "AI Chat answers are getting longer and longer, scrolling them is getting more tedious! This extension helps quickly find and scroll to the conversation that you're looking for",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:edge": "wxt -b edge",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "wxtdebug": "wxt prepare --debug",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "format": "biome format --write .",
    "format:check": "biome format --check .",
    "biome:ci": "biome ci ."
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@tailwindcss/vite": "^4.1.11",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-draggable": "^4.5.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@wxt-dev/module-react": "^1.1.3",
    "tailwind-scrollbar": "^4.0.2",
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.8.3",
    "wxt": "^0.20.8"
  }
}
